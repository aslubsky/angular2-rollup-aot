{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "mapRoot": "",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "outDir": "aot",
    "skipLibCheck": true,
    "rootDir": "."
  },
  "files": [
    "./app/app.module.ts",
    "./app/lazy.module.ts",
    "./app/main.aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./aot"
  }
}
